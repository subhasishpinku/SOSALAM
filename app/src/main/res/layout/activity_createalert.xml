<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            tools:ignore="RtlCompat"
            android:minHeight="@dimen/abc_action_bar_default_height_material">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_gravity="end"
                android:src="@mipmap/logo" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <ScrollView android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50sp"
        android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/lvv"
        android:layout_below="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:orientation="vertical">
        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/simpleTableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">
            <TableRow
                android:id="@+id/firstRow1"
                android:layout_marginTop="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Text:-"/>
                <EditText
                    android:id="@+id/EnterTextID"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/layout_square_border"
                    android:drawableRight="@drawable/ic_description_black_24dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:hint="Enter Text"/>
            </TableRow>
            <TableRow
                android:id="@+id/firstRow2"
                android:layout_marginTop="20sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Date:-"/>
                <TextView
                    android:id="@+id/dateId"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/layout_square_border"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/ic_date_range_black_24dp"
                    android:hint="Enter Date"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="20sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Time:-"/>
                <TextView
                    android:id="@+id/timeId"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/layout_square_border"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/ic_access_time_black_24dp"
                    android:hint="Enter Time"/>
            </TableRow>
                <LinearLayout
                    android:layout_marginTop="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/imageId"
                        android:layout_width="300sp"
                        android:layout_height="300sp"
                        android:background="@mipmap/profile"
                        android:scaleType="fitXY" />
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:orientation="horizontal">
                    <Button
                        android:id="@+id/cameraID"
                        android:layout_marginTop="10sp"
                        android:layout_width="100sp"
                        android:layout_height="40sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="CAMERA"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="   "/>
                    <Button
                        android:id="@+id/uploadID"
                        android:layout_marginTop="10sp"
                        android:layout_width="100sp"
                        android:layout_height="40sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="UPLOAD"/>
                      </LinearLayout>
                </LinearLayout>


        </TableLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/saveId"
        android:layout_marginTop="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="center" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>
